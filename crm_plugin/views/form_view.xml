			<field name="inherit_id" ref="crm.crm_lead_tag_form"/>
			<field name="arch" type="xml">

				<field name="name" position="after">
					<field name="m_type" required="1" widget="radio" options="{'horizontal': true}"/>
				</field>

			</field>
		</record>

