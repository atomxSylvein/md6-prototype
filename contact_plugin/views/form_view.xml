            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                	<sheet string="SystÃ¨me d'information">
						<div class="oe_title" style="max-width:50%;float:left;">
							<h2>
								<field name="m_name" help="Nom du SI" style="margin-top:10px;"/>
								<br/><br/>
							</h2>
						</div>
						<group name="group_ffca75">
							<field name="m_company"/>
							<field name="m_components"/>
						</group>
                	</sheet>
                </form>
            </field>
        </record>

	</data>
</odoo>